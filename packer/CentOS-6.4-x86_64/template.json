{
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/setup.sh",
        "scripts/virtualbox.sh",
        "scripts/vagrant.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ],
      "override": {
        "CentOS-6.4.x86_64": {
          "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'"
        }
      }
    }
  ],
  "builders": [
    {
      "output_directory": "vms",
      "vm_name": "CentOS-6.4.x86_64",
      "name": "CentOS-6.4.x86_64",
      "type": "virtualbox",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 20480,
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_checksum": "bb9af2aea1344597e11070abe6b1fcd3",
      "iso_checksum_type": "md5",
      "iso_url": "http://mirror.bytemark.co.uk/centos/6.4/isos/x86_64/CentOS-6.4-x86_64-netinstall.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "box/{{.BuildName}}.box"
    }
  ]
}
